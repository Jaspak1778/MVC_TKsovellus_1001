@model IEnumerable<MVC_TKsovellus_1001.Models.Tuotteet>

@{
    ViewBag.Title = "Index";
}

<h2>Tuotteet</h2>

<p>
    @Html.ActionLink("Lisää tuote", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ahinta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kuva)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nimi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ahinta)
        </td>
        <td>
            <img style="height: 100px; width: 100px; display: block;" src="@item.Kuva" /><img />
        </td>
        <td>
            @Html.ActionLink("Muokkaa", "Edit", new { id=item.TuoteID }) |
            @Html.ActionLink("Lisätiedot", "Details", new { id=item.TuoteID }) |
            @Html.ActionLink("Poista", "Delete", new { id=item.TuoteID })
        </td>
    </tr>
}

</table>

@model MVC_TKsovellus_1001.Models.Postitoimipaikat

@{
    ViewBag.Title = "Muokkaa";
}

<h4>Muokkaa kunnan nimeä</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h5>Postinumero: @Model.Postinumero</h5>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Postinumero)

    <div class="form-group">
        @Html.LabelFor(model => model.Postitoimipaikka, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Postitoimipaikka, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Postitoimipaikka, "", new { @class = "text-danger" })
        </div>
    </div>
    <p></p>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-primary btm-sm" href="javascript:void(0);" onclick="history.go(-1);">Takaisin</a>
        </div>
    </div>
</div>
}
